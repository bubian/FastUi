<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP_410"
        android:paddingStart="@dimen/DP_15"
        android:paddingTop="@dimen/DP_9"
        android:paddingEnd="@dimen/DP_15"
        android:paddingBottom="@dimen/DP_16">

        <TextView
            android:id="@+id/tv_selected_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/specific"
            android:text="@string/selected_tags"
            android:layout_marginTop="@dimen/DP_7"
            android:textColor="@color/color_1A1A1A"
            android:textSize="@dimen/SP_16" />

        <ImageView
            android:id="@+id/close"
            android:paddingTop="@dimen/DP_7"
            android:layout_width="@dimen/DP_25"
            android:layout_height="@dimen/DP_25"
            android:paddingStart="@dimen/DP_7"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_close_gray" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/selected_tags"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_32"
            android:layout_below="@+id/tv_selected_title"
            android:layout_marginTop="@dimen/DP_16"
            android:orientation="horizontal"
            tools:background="@android:color/darker_gray"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <LinearLayout
            android:id="@+id/ll_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selected_tags"
            android:layout_marginTop="@dimen/DP_30"
            android:layout_marginBottom="@dimen/DP_16"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_like_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/specific"
                android:text="@string/select_like_tags"
                android:textColor="@color/color_1A1A1A"
                android:textSize="@dimen/SP_16" />
            
            <ImageView
                android:id="@+id/iv_change"
                android:layout_width="@dimen/DP_20"
                android:layout_height="match_parent"
                android:paddingEnd="@dimen/DP_3"
                android:paddingStart="@dimen/DP_3"
                android:scaleType="center"
                android:src="@mipmap/ic_change"/>

            <TextView
                android:id="@+id/change"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/change"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                android:textColor="@color/color_1A1A1A"
                android:textSize="@dimen/SP_14" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/like_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/start_tao"
            android:layout_below="@+id/ll_like"
            tools:background="@android:color/holo_blue_bright" />

        <TextView
            android:id="@+id/start_tao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_40"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/DP_20"
            android:fontFamily="@font/specific"
            android:gravity="center"
            tools:text="@string/tao_same_musical"
            android:textColor="@android:color/white"
            android:textSize="@dimen/SP_16"
            tools:background="@android:color/holo_green_light" />

    </RelativeLayout>
</LinearLayout>
