<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_out</item>
        <item name="android:windowExitAnimation">@anim/bottom_in</item>
    </style>

    <style name="BottomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/BottomAnimation</item>
    </style>

    <style name="NullAnimationDialog" parent="@android:style/Animation.Dialog">  
            <item name="android:windowEnterAnimation">@null</item>  
            <item name="android:windowExitAnimation">@null</item>  
    </style>

    <style name="StyleDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="rtl_RecyclerTabLayout">
        <item name="rtl_tabIndicatorColor">@color/color_FF0000</item>
        <item name="rtl_tabIndicatorHeight">@dimen/DP_4</item>
        <item name="rtl_tabIndicatorWidth">@dimen/DP_16</item>
        <item name="rtl_tabPaddingStart">@dimen/DP_8</item>
        <item name="rtl_tabPaddingEnd">@dimen/DP_8</item>
        <item name="rtl_tabBackground">@null</item>
        <item name="rtl_tabTextAppearance">@style/rtl_RecyclerTabLayout.Tab</item>
        <item name="rtl_tabSelectedTextColor">@color/color_333333</item>
    </style>

    <style name="rtl_RecyclerTabLayout.Tab">
        <item name="android:textSize">@dimen/SP_16</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="rtl_RecyclerTabLayout.Tab1">
        <item name="android:textSize">@dimen/SP_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_BBBBBB</item>
    </style>

    <declare-styleable name="MyHalfProgressBar">
        <attr name="roundColor1" format="color"/>
        <attr name="roundProgressColor1" format="color"/>
        <attr name="circularDotColor1" format="color"/>
        <attr name="progressTextColor" format="color"/>
        <attr name="progressTextSize" format="dimension"/>
    </declare-styleable>

    <style name="AdjustPanStyleDialog" parent="StyleDialog">
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>