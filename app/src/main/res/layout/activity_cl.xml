<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/DP_16"
            android:text="barrier:在给定控件的 left/top/right/end 建立屏障，其它控件可以根据屏障位置进行约束布局"
            android:textColor="@color/color_99FA3123"
            android:textSize="@dimen/SP_11" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/DP_16">

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_ids="b1,b2" />

            <TextView
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="barrier1"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP_8"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="barrier2-barrier2-barrier2"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/b1" />

            <TextView
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/DP_8"
                android:layout_marginTop="@dimen/DP_8"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="barrier3"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/b2"
                app:layout_constraintStart_toEndOf="@+id/barrier"
                app:layout_constraintTop_toTopOf="@+id/b1" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/DP_16"
            android:text="Guideline:建立辅助线，共布局使用"
            android:textColor="@color/color_99FA3123"
            android:textSize="@dimen/SP_11" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="@dimen/DP_16">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/DP_16" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/DP_60" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/v3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="@dimen/DP_16" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />


            <TextView
                android:id="@+id/gl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="Guideline1"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/h2"
                app:layout_constraintEnd_toEndOf="@+id/v3"
                app:layout_constraintStart_toStartOf="@+id/v3"
                app:layout_constraintTop_toTopOf="@+id/h2" />

            <TextView
                android:id="@+id/gl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="Guideline2"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/v2"
                app:layout_constraintTop_toTopOf="@+id/h2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/DP_16"
            android:text="Group:将所以控件归纳到一个组，可以统一对所以控件做操作"
            android:textColor="@color/color_99FA3123"
            android:textSize="@dimen/SP_11" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DP_16">

            <androidx.constraintlayout.widget.Group
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="g1,g2" />

            <TextView
                android:id="@+id/g1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="Group1"
                android:textColor="@color/white"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@+id/g2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/g2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="Group2"
                android:textColor="@color/white"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/DP_16"
            android:text="Placeholder:占位，根据需要替换占位view,个人觉得就是通过一个view来记录位置信息"
            android:textColor="@color/color_99FA3123"
            android:textSize="@dimen/SP_11" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DP_16">

            <TextView
                android:id="@+id/p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="Placeholder1"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/p2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="Placeholder2"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Placeholder
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/DP_16"
                app:content="@+id/p2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/DP_16"
            android:text="ConstraintSet:约束集，约束属性的集合"
            android:textColor="@color/color_99FA3123"
            android:textSize="@dimen/SP_11" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_cs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DP_16">

            <TextView
                android:id="@+id/cs1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="ConstraintSet"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/DP_16"
            android:text="布局属性集合"
            android:textColor="@color/color_99FA3123"
            android:textSize="@dimen/SP_11" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DP_16">

            <androidx.constraintlayout.helper.widget.Layer
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/DP_10"
                app:constraint_referenced_ids="a1,a2,a3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:paddingTop="@dimen/DP_30"
                android:text="Baseline_toBaseline"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/a3"
                android:layout_width="@dimen/DP_70"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="to_a1"
                android:textColor="@color/white"
                app:layout_constraintBaseline_toBaselineOf="@+id/a1"
                app:layout_constraintStart_toEndOf="@+id/a1" />


            <TextView
                android:id="@+id/a2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/DP_16"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="goneMargin11"
                android:textColor="@color/white"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@+id/a3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/a4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="goneMargin"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/a2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginStart="@dimen/DP_16" />

            <!-- For example the following will make the left side with a 30% bias instead of the default 50% -->
            <TextView
                android:id="@+id/a5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="bias"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/a3" />

            <TextView
                android:id="@+id/a6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="Circular"
                android:textColor="@color/white"
                app:layout_constraintCircle="@id/a5"
                app:layout_constraintCircleAngle="135"
                app:layout_constraintCircleRadius="@dimen/DP_60" />


            <TextView
                android:id="@+id/a7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP_16"
                android:layout_marginEnd="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="app:layout_constrainedWidth-app:layout_constrainedWidth"
                android:textColor="@color/white"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/a8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/a6" />

            <TextView
                android:id="@+id/a8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="app:layout_constrainedWidth"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/a6" />

            <TextView
                android:id="@+id/a9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_8"
                android:text="constraintHeight_min"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/a7"
                app:layout_constraintWidth_percent="0.2" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/DP_16"
            android:text="平分布局"
            android:textColor="@color/color_99FA3123"
            android:textSize="@dimen/SP_11" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DP_16">

            <TextView
                android:id="@+id/Ratio"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:paddingTop="@dimen/DP_30"
                android:text="Ratio"
                android:textColor="@color/white"
                app:layout_constraintDimensionRatio="1:2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Ratio1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/DP_16"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:paddingTop="@dimen/DP_30"
                android:text="Ratio"
                android:textColor="@color/white"
                app:layout_constraintDimensionRatio="H,30:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Ratio" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/DP_16"
            android:text="Chain:CHAIN_SPREAD默认模式"
            android:textColor="@color/color_99FA3123"
            android:textSize="@dimen/SP_11" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DP_16">

            <TextView
                android:id="@+id/Chain1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_4"
                android:text="Chain"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/Chain2"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Chain2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_4"
                android:text="Chain"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/Chain3"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/Chain1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Chain3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_4"
                android:text="Chain"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/Chain2"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DP_16">

            <TextView
                android:id="@+id/Chain4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_4"
                android:text="Chain"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/Chain5"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Chain5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_4"
                android:text="Chain"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/Chain6"
                app:layout_constraintStart_toEndOf="@+id/Chain4"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Chain6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_4"
                android:text="Chain"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Chain5"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DP_16">

            <androidx.constraintlayout.helper.widget.Flow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:constraint_referenced_ids="flow1,flow2,flow3"
                app:flow_horizontalStyle="packed"
                app:flow_wrapMode="none"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/flow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_4"
                android:text="flow1"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/flow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_4"
                android:text="flow2"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/flow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP_16"
                android:background="@color/color_A6A6A6"
                android:padding="@dimen/DP_4"
                android:text="flow3"
                android:textColor="@color/white" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DP_16">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/imageFilterView"
                android:layout_width="@dimen/DP_200"
                android:layout_height="@dimen/DP_200"
                android:src="@mipmap/fourth"
                app:brightness="2"
                app:contrast="2"
                app:crossfade="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:overlay="true"
                app:roundPercent="1"
                app:saturation="2"
                app:warmth="3" />

            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:id="@+id/imageFilterButton"
                android:layout_width="@dimen/DP_120"
                android:layout_height="@dimen/DP_120"
                app:brightness="0"
                app:contrast="1"
                app:crossfade="1"
                app:layout_constraintEnd_toStartOf="@+id/space"
                app:layout_constraintStart_toEndOf="@+id/imageFilterView"
                app:layout_constraintTop_toTopOf="parent"
                app:overlay="true"
                app:round="16dp"
                app:roundPercent="0.3"
                app:saturation="0"
                app:srcCompat="@mipmap/second"
                app:warmth="5" />

            <Space
                android:id="@+id/space"
                android:layout_width="@dimen/DP_30"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DP_16">

            <androidx.constraintlayout.utils.widget.MockView
                android:id="@+id/Avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.utils.widget.MockView
                android:id="@+id/Name"
                android:layout_width="100dp"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/Avatar"
                app:layout_constraintTop_toTopOf="@id/Avatar" />

            <androidx.constraintlayout.utils.widget.MockView
                android:id="@+id/Age"
